/**悬浮样式 */
.ant-table-body .ant-table-row-hover > td {
  background: #f5f7fa!important;
}
.ant-table-fixed-right .ant-table-row-hover > td {
  background: #f5f7fa!important;
}
.ant-dropdown-menu-item-active {
  background: #f5f7fa!important;
}
/*//点击行的样式*/
.clickRowStyl > td {
  background-color: #e6f7ff !important;
}
